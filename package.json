{
  "name": "Weather-Bot",
  "version": "1.0.1",
  "description": "Bot scaffold for refocus bot development",
  "url": "https://git.soma.salesforce.com/Refocus-Bots/refocus-bot-scaffold",
  "scripts": {
    "start-ui": "webpack-dev-server --open",
    "start": "npm run build-ui && node index.js",
    "build-ui": "webpack --config webpack.config.js",
    "lint": "eslint --ext=js --ext=jsx .",
    "postinstall": "npm run build-ui",
    "test": "./node_modules/.bin/mocha --reporter spec",
    "test-dev": "nodemon --ext js --watch ./ --exec 'mocha ./test'"
  },
  "dependencies": {
    "@salesforce/refocus-bdk": "file:./lib/salesforce-refocus-bdk-1.3.1.tgz",
    "dotenv": "4.0.0",
    "dotenv-webpack": "1.5.4",
    "express": "4.10.2",
    "jsforce": "^1.7.1",
    "lodash": "^4.17.4",
    "mocha": "^3.5.3",
    "moment": "^2.18.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "socket.io": "1.2.0",
    "socket.io-client": "^2.0.3",
    "superagent": "6.1.0",
    "superagent-proxy": "^1.0.2"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "chai": "4.1.2",
    "css-loader": "^0.28.4",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "html-webpack-plugin": "^2.28.0",
    "sinon": "3.2.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "zip-webpack-plugin": "2.0.0"
  },
  "metadata": {
    "actions": [
      {
        "name": "getCurrentWeather",
        "parameters": [
          {
            "name": "zipCode",
            "type": "INTEGER"
          }
        ]
      }
    ],
    "data": [
      {
        "name": "temperature",
        "type": "INTEGER"
      },
      {
        "name": "weather",
        "type": "STRING"
      },
      {
        "name": "location",
        "type": "INTEGER"
      }
    ],
    "settings": [
      {
        "key": "currentZipCode",
        "helpText": "The intial zip code for the weather if no other location is specificed in bot data"
      }
    ]
  }
}
